{
    "compilerOptions": {
        "outDir": "./build/",
        "noImplicitAny": true,
        "target": "es5",
        "module": "ESNext",
        "jsx": "react-jsx",
        "allowJs": true,
        "moduleResolution": "node",
        "esModuleInterop": true,
        "allowSyntheticDefaultImports": true,
        // Для абсолютного импорта
        "baseUrl": ".",
        "paths": {
            "*": ["./src/*"] // пути импортируются относительно /src/ - абсолютные пути, вместо относительных
        }
    },
    "ts-node": {
        "compilerOptions": {
            "module": "CommonJS"
        }
    }
}